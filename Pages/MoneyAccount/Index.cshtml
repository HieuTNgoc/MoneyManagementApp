@page
@model MoneyManagementApp.Pages.MoneyAccount.IndexModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Maccount[0].AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maccount[0].Money)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maccount[0].Icon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Maccount)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Money)
                </td>
                <td>
                    <div class="selector-container">
                        <div class="selected-icon-container">
                            <i class="material-icons selected-icon" style="background: @item.Color">@item.Icon</i>
                        </div>
                    </div>
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.AccountId">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.AccountId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
