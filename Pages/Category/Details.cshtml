@page
@model MoneyManagementApp.Pages.Category.DetailsModel

<div>
    <h4>Cate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cate.CateName)
        </dt>
        <dd class="col-sm-4">
            @Html.DisplayFor(model => model.Cate.CateName)
        </dd>
        <dd class="col-sm-6">
            <div class="selector-container">
                <div class="selected-icon-container">
                    <i class="material-icons selected-icon" style="background: @Model.Cate.Color">@Model.Cate.Icon</i>
                </div>
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cate.Type)
        </dt>
        @if (Model.Cate.Type == false)
        {
            <dd class="col-sm-10">Cost</dd>
        }
        @if (Model.Cate.Type == true)
        {
            <dd class="col-sm-10">Income</dd>
        }

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Cate?.CateId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
