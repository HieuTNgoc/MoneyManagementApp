@page
@model MoneyManagementApp.Pages.Transaction.DetailsModel

<div>
    <h4>Transction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transction.Money)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transction.Money)
        </dd>
        <dt class="col-sm-2">
            @if (Model.Transction.Type == false)
            {
            <dd class="col-sm-10">Cost</dd>
            }
            @if (Model.Transction.Type == true)
            {
            <dd class="col-sm-10">Income</dd>
            }
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transction.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transction.Datetime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transction.Datetime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transction.Account)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transction.Account.AccountName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transction.Cate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transction.Cate.CateName)
            <div class="selector-container">
                <div class="selected-icon-container">
                    <i class="material-icons selected-icon" style="background: @Model.Transction.Cate.Color">@Model.Transction.Cate.Icon</i>
                </div>
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transction.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transction.Note)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Transction?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
