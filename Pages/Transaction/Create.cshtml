@page
@model MoneyManagementApp.Pages.Transaction.CreateModel

<h4>Transction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transactione.UserId" />
            <div class="form-group">
                <label asp-for="Transactione.Type" class="control-label"></label>
                <select asp-for="Transactione.Type" class="form-control">
                    <option selected="selected" value="False">Cost</option>
                    <option  value="True">Income</option>
                </select>
            </div>

            <div class="form-group">
                <label  class="control-label">Category</label>
                <select asp-for="Transactione.CateId" class="form-control">
                @foreach (var item in Model.Cates)
                {
                    <option selected="selected" value="@item.CateId">
                        @item.CateName
                        @*<div class="selector-container">
                            <div class="selected-icon-container">
                                <i class="material-icons selected-icon" style="background: @item.Color">@item.Icon</i>
                            </div>
                        </div>*@
                    </option>
                }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Account</label>
                <select asp-for="Transactione.AccountId" class="form-control">
                @foreach (var item in Model.Maccounts)
                {
                    <option selected="selected" value="@item.AccountId">
                        @item.AccountName
                        @*<div class="selector-container">
                            <div class="selected-icon-container">
                                <i class="material-icons selected-icon" style="background: @item.Color">@item.Icon</i>
                            </div>
                        </div>*@
                    </option>
                }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Transactione.Money" class="control-label"></label>
                <input asp-for="Transactione.Money" class="form-control" />
                <span asp-validation-for="Transactione.Money" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transactione.Note" class="control-label"></label>
                <input asp-for="Transactione.Note" class="form-control" />
                <span asp-validation-for="Transactione.Note" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
