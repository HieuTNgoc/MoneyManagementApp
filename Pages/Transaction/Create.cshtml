@page
@model MoneyManagementApp.Pages.Transaction.CreateModel

<h4>Transction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transactione.UserId" value="@Model.Saver.UserId" />
            <input type="hidden" asp-for="Transactione.Type" value="False"/>

            <div class="form-group">
                <label asp-for="Transactione.CateId" class="control-label"></label>
                <select asp-for="Transactione.CateId" class="form-control"asp-items="ViewBag.CateId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Transactione.AccountId" class="control-label"></label>
                <select asp-for="Transactione.AccountId" class="form-control" asp-items="ViewBag.AccountId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Transactione.Money" class="control-label"></label>
                <input asp-for="Transactione.Money" class="form-control" />
                <span asp-validation-for="Transactione.Money" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transactione.Datetime" class="control-label"></label>
                <input class="form-control" asp-for="Transactione.Datetime" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                <span asp-validation-for="Transactione.Datetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transactione.Note" class="control-label"></label>
                <textarea asp-for="Transactione.Note" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Transactione.Note" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="sendButton" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
