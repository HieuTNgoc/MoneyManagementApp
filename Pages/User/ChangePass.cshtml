@page
@model MoneyManagementApp.Pages.User.ChangePassModel

<h1>Edit Account</h1>

<form method="post">
    <section class="vh-88" style="scale: 0.9">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                         class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Saver.UserId" />
                    <input type="hidden" asp-for="Saver.Password" />
                    <input type="hidden" asp-for="Saver.Email" />
                    <input type="hidden" asp-for="Saver.Username" />
                    <!-- Email input -->

                    <div class="form-outline mb-4">
                        <label class="control-label">Confirm Password</label>
                        <input type="password" id="form1Example23" class="form-control form-control-lg" asp-for="OldPassword" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-4">
                        <label class="control-label">New Password</label>
                        <input type="password" id="form1Example23" class="form-control form-control-lg" asp-for="NewPassword" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" value="Save" class="btn btn-primary btn-lg btn-block" style="width: 100%;margin-bottom: 10px">Save</button>
                </div>
            </div>
        </div>
    </section>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
